<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.chen.account.dao.StockDataMapperExtends" >
  <resultMap id="BaseResultMap" type="com.chen.account.entity.StockData" >
    <id column="id" property="id" jdbcType="INTEGER" />
    <result column="phone" property="phone" jdbcType="VARCHAR" />
    <result column="stock_id" property="stockId" jdbcType="VARCHAR" />
    <result column="stock_name" property="stockName" jdbcType="VARCHAR" />
    <result column="have_amount" property="haveAmount" jdbcType="VARCHAR" />
    <result column="sell_amount" property="sellAmount" jdbcType="VARCHAR" />
    <result column="stock_money" property="stockMoney" jdbcType="VARCHAR" />
    <result column="buy_money" property="buyMoney" jdbcType="VARCHAR" />
    <result column="pro_amount" property="proAmount" jdbcType="VARCHAR" />
  </resultMap>
  <sql id="Base_Column_List" >
    id, phone, stock_id, stock_name, have_amount, sell_amount, stock_money, buy_money, 
    pro_amount
  </sql>
  <select id="selectByPhone" resultMap="BaseResultMap" parameterType="java.lang.String" >
    select 
    <include refid="Base_Column_List" />
    from stock_data
    where phone = #{phone,jdbcType=VARCHAR}
  </select>

</mapper>